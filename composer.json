{
    "name": "jthatch/advent-of-code-php-2020",
    "authors": [
        {
            "name": "James Thatcher",
            "email": "james@jameswt.com"
        }
    ],
    "type": "project",
    "require": {
        "php": "^8.1",
        "ext-bcmath": "*",
        "ext-gmp": "*",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "require-dev": {
        "pestphp/pest": "^v1.18.0",
        "phpstan/phpstan": "^1.4",
        "friendsofphp/php-cs-fixer": "^v3.6.0",
        "symplify/phpstan-extensions": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "scripts": {
        "cs-fixer": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "phpstan": "phpstan analyse --ansi --memory-limit=1G"
    },
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
