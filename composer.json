{
    "name": "jthatch/advent-of-code-php-2020",
    "authors": [
        {
            "name": "James Thatcher",
            "email": "james@jameswt.com"
        }
    ],
    "type": "project",
    "require": {
        "php": "^8.0",
        "phpstan/phpstan-phpunit": "^0.12.22",
        "symplify/phpstan-extensions": "^9.4"
    },
    "require-dev": {
        "pestphp/pest": "^v1.18.0",
        "phpstan/phpstan": "^0.12.99",
        "friendsofphp/php-cs-fixer": "^v3.1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "scripts": {
        "cs-fixer": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "phpstan": "phpstan analyse --ansi"
    },
    "minimum-stability": "stable"
}
